<body>
    <div class="container">
        <div class="player-images">
            <img src="https://upload.wikimedia.org/wikipedia/commons/8/8c/Cristiano_Ronaldo_2018.jpg" alt="Ronaldo">
            <img src="https://upload.wikimedia.org/wikipedia/commons/b/b4/Lionel-Messi-Argentina-2022-FIFA-World-Cup_%28cropped%29.jpg" alt="Messi">
        </div>
        <div class="header">
            <h1>M·ªü T√∫i M√π - B·∫°n Thu·ªôc ƒê·ªôi N√†o?</h1>
        </div>
        <input type="text" id="name" placeholder="Nh·∫≠p t√™n c·ªßa b·∫°n">
        <button id="giftButton" onclick="openGift()"></button>
        <div id="result"></div>
        <div id="teamLists">
            <div class="team">
                <h3 style="color: green">ƒê·ªôi Xanh</h3>
                <ul id="greenTeam"></ul>
            </div>
            <div class="team">
                <h3 style="color: red">ƒê·ªôi ƒê·ªè</h3>
                <ul id="redTeam"></ul>
            </div>
        </div>
        <div class="fireworks" id="fireworks">
            <div class="firework"></div>
            <div class="firework"></div>
            <div class="firework"></div>
            <div class="firework"></div>
            <div class="firework"></div>
        </div>
    </div>

    <script>
        // Kh·ªüi t·∫°o m·∫£ng ƒë·ªôi
        let greenTeam = [];
        let redTeam = [];
        const MAX_PLAYERS_PER_TEAM = 12;

        // Load d·ªØ li·ªáu t·ª´ localStorage
        function loadTeams() {
            try {
                const storedGreenTeam = localStorage.getItem('greenTeam');
                const storedRedTeam = localStorage.getItem('redTeam');
                
                if (storedGreenTeam) {
                    greenTeam = JSON.parse(storedGreenTeam);
                }
                
                if (storedRedTeam) {
                    redTeam = JSON.parse(storedRedTeam);
                }
                
                updateTeamList('greenTeam', greenTeam);
                updateTeamList('redTeam', redTeam);
            } catch (error) {
                console.error("L·ªói khi t·∫£i d·ªØ li·ªáu ƒë·ªôi:", error);
                // N·∫øu c√≥ l·ªói, reset d·ªØ li·ªáu
                greenTeam = [];
                redTeam = [];
                localStorage.removeItem('greenTeam');
                localStorage.removeItem('redTeam');
            }
        }

        // Ki·ªÉm tra URL parameters v√† t·ª± ƒë·ªông ph√¢n ƒë·ªôi
        function checkUrlAndAssign() {
            try {
                const urlParams = new URLSearchParams(window.location.search);
                const nameFromUrl = urlParams.get('name');
                if (nameFromUrl) {
                    document.getElementById("name").value = decodeURIComponent(nameFromUrl);
                    setTimeout(openGift, 500); // Th√™m ƒë·ªô tr·ªÖ ƒë·ªÉ ƒë·∫£m b·∫£o trang ƒë√£ t·∫£i ho√†n t·∫•t
                }
            } catch (error) {
                console.error("L·ªói khi ki·ªÉm tra URL:", error);
            }
        }

        // C·∫≠p nh·∫≠t danh s√°ch ƒë·ªôi tr√™n giao di·ªán
        function updateTeamList(teamId, teamArray) {
            const list = document.getElementById(teamId);
            if (list) {
                list.innerHTML = '';
                teamArray.forEach(member => {
                    const li = document.createElement('li');
                    li.textContent = member;
                    list.appendChild(li);
                });
            }
        }

        // H√†m m·ªü h·ªôp qu√† v√† ph√¢n ƒë·ªôi
        function openGift() {
            const nameInput = document.getElementById("name");
            const name = nameInput.value.trim();
            if (!name) {
                alert("Vui l√≤ng nh·∫≠p t√™n!");
                return;
            }

            if (greenTeam.includes(name) || redTeam.includes(name)) {
                alert("T√™n n√†y ƒë√£ ƒë∆∞·ª£c s·ª≠ d·ª•ng!");
                return;
            }

            if (greenTeam.length >= MAX_PLAYERS_PER_TEAM && redTeam.length >= MAX_PLAYERS_PER_TEAM) {
                alert("C·∫£ hai ƒë·ªôi ƒë√£ ƒë·ªß 12 ng∆∞·ªùi!");
                return;
            }

            let assignedTeam;
            const availableTeams = [];
            if (greenTeam.length < MAX_PLAYERS_PER_TEAM) availableTeams.push("ƒê·ªôi Xanh");
            if (redTeam.length < MAX_PLAYERS_PER_TEAM) availableTeams.push("ƒê·ªôi ƒê·ªè");

            if (availableTeams.length === 0) {
                alert("Kh√¥ng c√≤n ch·ªó trong ƒë·ªôi n√†o!");
                return;
            }

            assignedTeam = availableTeams[Math.floor(Math.random() * availableTeams.length)];

            // Th√™m hi·ªáu ·ª©ng
            const giftButton = document.getElementById("giftButton");
            const result = document.getElementById("result");
            const fireworks = document.getElementById("fireworks");

            // Th√™m l·ªõp open ƒë·ªÉ t·∫°o hi·ªáu ·ª©ng bung n·∫Øp
            giftButton.classList.add("open");
            setTimeout(() => {
                // Hi·ªÉn th·ªã ph√°o hoa
                fireworks.classList.add("show");
                result.style.color = assignedTeam === "ƒê·ªôi Xanh" ? "green" : "red";
                result.innerHTML = `${name}, b·∫°n thu·ªôc <strong>${assignedTeam}</strong>!`;
                result.classList.add("show");

                // L∆∞u v√†o ƒë·ªôi
                if (assignedTeam === "ƒê·ªôi Xanh") {
                    greenTeam.push(name);
                } else {
                    redTeam.push(name);
                }
                updateTeamList('greenTeam', greenTeam);
                updateTeamList('redTeam', redTeam);

                try {
                    // L∆∞u v√†o localStorage
                    localStorage.setItem('greenTeam', JSON.stringify(greenTeam));
                    localStorage.setItem('redTeam', JSON.stringify(redTeam));
                } catch (error) {
                    console.error("L·ªói khi l∆∞u d·ªØ li·ªáu:", error);
                    alert("C√≥ l·ªói khi l∆∞u d·ªØ li·ªáu! Vui l√≤ng th·ª≠ l·∫°i sau.");
                }

                // Reset sau 2 gi√¢y
                setTimeout(() => {
                    giftButton.classList.remove("open");
                    fireworks.classList.remove("show");
                    result.classList.remove("show");
                    nameInput.value = "";
                    // X√≥a param t·ª´ URL
                    if (window.history && window.history.pushState) {
                        window.history.pushState({}, document.title, window.location.pathname);
                    }
                }, 2000);
            }, 500);
        }

        // Th√™m ch·ª©c nƒÉng reset
        function resetTeams() {
            if (confirm("B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a h·∫øt ng∆∞·ªùi ch∆°i trong c·∫£ hai ƒë·ªôi?")) {
                greenTeam = [];
                redTeam = [];
                localStorage.removeItem('greenTeam');
                localStorage.removeItem('redTeam');
                updateTeamList('greenTeam', greenTeam);
                updateTeamList('redTeam', redTeam);
                alert("ƒê√£ x√≥a t·∫•t c·∫£ ng∆∞·ªùi ch∆°i!");
            }
        }

        // Th√™m ph√≠m t·∫Øt ƒë·ªÉ reset (Ctrl+Shift+R)
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.shiftKey && e.key === 'R') {
                resetTeams();
                e.preventDefault();
            }
        });

        // Ch·∫°y khi trang t·∫£i
        window.onload = function() {
            loadTeams();
            checkUrlAndAssign();
        };
    </script>
</body>
